{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "ðŸŽµ Concert Program Manager ðŸŽµ",
    "type": "array",
    "items":
    {
        "title": "concert block",
        "type": "object",
        "properties":
        {
            "time":
            {
                "description": "The starting time for this part",
                "title": "starting time",
                "type": "string"
            },
            "performances":
            {
                "title": "performances",
                "type": "array",
                "items":
                {
                    "description": "performance by an ensemble",
                    "title": "performance",
                    "type": "object",
                    "properties":
                    {
                        "ensemble":
                        {
                            "title": "ensemble",
                            "type": "array",
                            "items":
                            {
                                "title": "member",
                                "type": "object",
                                "properties":
                                {
                                    "name":
                                    {
                                        "description": "The name of this ensemble member",
                                        "title": "name",
                                        "type": "string"
                                    },
                                    "instrument":
                                    {
                                        "description": "The instrument of this ensemble member",
                                        "title": "instrument",
                                        "type": "string"
                                    }
                                },
                                "required": ["name", "instrument"]
                            },
                            "minItems": 1,
                            "maxItems": 5
                        },
                        "pieces":
                        {
                            "title": "musical pieces",
                            "type": "array",
                            "items":
                            {
                                "title": "piece",
                                "type": "object",
                                "properties":
                                {
                                    "title":
                                    {
                                        "description": "title of the piece",
                                        "title": "title",
                                        "type": "string"
                                    },
                                    "composer":
                                    {
                                        "description": "composer of the piece",
                                        "title": "composer",
                                        "type": "object",
                                        "properties":
                                        {
                                            "name":
                                            {
                                                "description": "name of the composer",
                                                "title": "name",
                                                "type": "string"
                                            },
                                            "yob":
                                            {
                                                "title": "year of birth",
                                                "type": "string",
                                                "minLength": 4,
                                                "maxLength": 4
                                            },
                                            "yod":
                                            {
                                                "title": "year of death",
                                                "type": "string",
                                                "minLength": 4,
                                                "maxLength": 4
                                            },
                                            "arr":
                                            {
                                                "title": "arranged by",
                                                "type": "string"
                                            }
                                        },
                                        "dependencies":
                                        {
                                            "yod": ["yob"]
                                        }
                                    },
                                    "movements":
                                    {
                                        "title": "movements",
                                        "type": "array",
                                        "items":
                                        {
                                            "description": "movements to be played",
                                            "type": "string"
                                        },
                                        "uniqueItems": true
                                    }
                                },
                                "required": ["title"]
                            },
                            "minItems": 1
                        }
                    },
                    "required": ["ensemble", "pieces"]
                },
                "minItems": 1
            }
        },
        "required": ["time", "performances"]
    },
    "minItems": 1,
    "maxItems": 3
}
