# This is a sample configuration
# font installed on system
font: Montserrat
# background latex color (only used if no background picture)
background color: yellow!20
# background color in hexadecimal form
background color html: FEF1E5
# foreground latex color (only used if no background picture)
foreground color: yellow!20
# foreground color in hexadecimal form
foreground color html: FEF1E5
# horizontal offset of tikzpicture
horizontal offset: 1
# vertical offset of tikzpicture
vertical offset: 2
# separation between matrices and other nodes
node spacing: 0.5
# length of the 3 columns
column width: [6.5, 11.4, 6.5]
# separation between nodes in x direction
column spacing: 0.3
# separation between nodes in y direction
row spacing: 0.03
# line spacing (must be adapted to row spacing)
line spacing: 0.3
# program box margin
program box margin: 0.3
# separation for time node
time box margin: %(program box margin)s
